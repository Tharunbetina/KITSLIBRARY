<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:orientation="vertical"
    android:background="#fff"
    android:forceDarkAllowed="true"
    android:padding="@dimen/_30sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logologin"
        android:transitionName="logo_trans"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:src="@drawable/kitlibimg"
        android:layout_weight="7"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:textColor="#66000000"
        android:layout_height="wrap_content"
        android:transitionName="quote_trans"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Login To Continue"
        android:layout_weight="1"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:orientation="vertical"
        android:layout_weight="12">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Usernameout"
            android:hint="Username"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColorHint="#61000000"
            app:boxStrokeColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/Usernamein"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Passwordout"
            android:hint="Password"
            android:textColorHint="#61000000"
            app:boxStrokeColor="@color/black"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:id="@+id/Passwordin"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gobtn"
            android:layout_width="@dimen/_100sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:background="#000"
            android:textColor="#fff"
            android:text="GO"
            android:onClick="tocategories"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00000000"
        android:fontFamily="sans-serif-light"
        android:gravity="bottom"
        android:textColor="#66000000"
        android:text="Credits"
        android:onClick="tocredits"
        android:layout_weight="2"/>


</androidx.appcompat.widget.LinearLayoutCompat>